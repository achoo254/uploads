package com.quanly.demo.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

import com.quanly.demo.model.service.UserInfoService;

@Controller
@RequestMapping(value="userInfoController")
public class UserInfoController {
	@Autowired
	private UserInfoService userInfoService;
	
	@GetMapping(value="getAll.htm")
	public ModelAndView getAll() {
		//Khai bao doi tuong mav
		ModelAndView mav = new ModelAndView("listUserInfo");
		//Goi sang service de lay doi tuong products
		List<UserInfo> listPro = ProductsService.getAllProduct();
		//Add pro vao mav
		mav.addObject("listPro", listPro);
		return mav;
	}
}
